@{
    ViewData["Title"] = "Task List";
}

@model List<ApplicationResponse>

<link rel="stylesheet" type="text/css" href="/css/default.css" />



<h1>Welcome to the task list page</h1>

<h2>Temp: Here is a first draft list</h2>

<table class="table table-bordered table-striped">

    <!--task(string), due date(date), quadrant(string), category(string), completed(bool)-->
    <thead class="bold">
        <tr>
            <td>Task</td>
            <td>Due Date</td>
            <td>Quadrant</td>
            <td>Category</td>
            <td>Completed?</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {

            <tr>
                <td>@x.Task</td>
                <td>@x.DueDate</td>
                <td>@x.Quadrant</td>
                <td>@x.Category.CategoryTitle</td>
                <td>@x.Completed</td>


                <td><a asp-controller="Home" asp-action="Edit" asp-route-TaskId="@x.TaskId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-TaskId="@x.TaskId">Delete</a></td>
            </tr>
        }

    </tbody>
</table>





